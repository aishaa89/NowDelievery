@page
@model NowDelivary.RazorPages.DelivarymanRazorPageModel
@{
    ViewData["Title"] = "DelivarymanRazorPage";
}

<div class="container" style="color:white;">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Create a new Delivaryman account.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-info"></div>
        <div class="form-group">
            <label asp-for="Input.UserName">Full Name</label>
            <input asp-for="Input.UserName" class="form-control" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password">Pssword</label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.IdentityNumber">Identity Number</label>
            <input asp-for="Input.IdentityNumber" class="form-control" />
            <span asp-validation-for="Input.IdentityNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.PhoneNumber">Phone Number</label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Description">Delivaryman Address</label>
            <input asp-for="Input.Description" class="form-control" />
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.SpescialMark">Special mark of delivaryman address</label>
            <input asp-for="Input.SpescialMark" class="form-control" />
            <span asp-validation-for="Input.SpescialMark" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Area">Select Area</label>
            <select class="custom-select" asp-for="@Model.Input.areaID" asp-items="@Model.Area"></select>
            <span asp-validation-for="@Model.Area" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
    </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}