@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout=null;
}

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>
<link href="~/projectAssets/assets/css/styleLogin.css" rel="stylesheet">
<link rel="stylesheet" href="~/projectAssets/assets/css/animate.min.css">

<div class="wrapper">
    <div class="container">
        <h1 class="animated infinite bounce slow">Now Delivary</h1>
        <h2 class="animated infinite bounce slow">@ViewData["Title"]</h2>
        <div class="row">
            <div class="col-sm-6">
                <form class="form" id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="form-group">
                        <input asp-for="Input.UserName" placeholder="Your Name" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <input asp-for="Input.Email" placeholder="Your Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <input asp-for="Input.Password" placeholder="Your Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <input asp-for="Input.ConfirmPassword" placeholder=" Confirm Your Password" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <input asp-for="Input.PhoneNumber" placeholder="Your Phone Number" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <input asp-for="Input.Description" placeholder="Your Address" class="form-control" />
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <input asp-for="Input.SpescialMark" placeholder="Special Mark Your Address" class="form-control" />
                        <span asp-validation-for="Input.SpescialMark" class="text-danger"></span>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <select asp-for="@Model.Input.AreaID" asp-items="@Model.Area" class="browser-default custom-select">
                        </select>
                        <span asp-validation-for="@Model.Area" class="text-danger"></span>
                    </div>

                    <input type="submit" class="login-button" value="Register">
                    <button class="login-button" asp-page="Login">Login</button>
                </form>
            </div>
            @*<div class="col-sm-1"></div>
            <div style="background-color:white" class="col-sm-4">
                <div asp-validation-summary="All" class="text-info"></div>
            </div>*@
        </div>
    </div>

    <ul class="bg-bubbles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
