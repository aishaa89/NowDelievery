
@{
    ViewData["Title"] = "IncomePage";
}

    <div class="container">
        <div>
            <p class="alert alert-light">Get Income From Start Date To specific Date</p>
        </div>
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <form asp-action="GetIncome" asp-controller="Admin" method="get">
                    <div class="form-group">
                        <label style="color:white" for="startDate">Select Start Month</label>
                        <input required type="month" name="startDate" id="startDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label style="color:white" for="endDate">Choose End Date</label>
                        <input required type="month" name="endDate" id="endDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Get Income" class="form-control btn btn-secondary btn-block" />
                    </div>
                </form>
            </div>
        </div>
        <hr />
    </div>