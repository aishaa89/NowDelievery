@model IEnumerable<Place>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Place Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var place in Model)
                {
                    <tr>
                        <td>@place.PlaceName</td>
                        <td>
                            <a class="btn btn-block btn-info" asp-action="Edit" asp-controller="Places" asp-route-id="@place.ID">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-block btn-danger" asp-action="Delete" asp-controller="Places" asp-route-id="@place.ID">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>


    <a class="btn btn-block btn-primary" asp-action="Create" asp-controller="Places">ADD New Supplier</a>
</div>
