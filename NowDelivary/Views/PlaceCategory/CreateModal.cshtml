@model NowDelivary.Models.PlaceCategory
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


   
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                ×
            </button>
            <h4 class="modal-title">New Module</h4>
        </div>
        <div class="modal-body">

            <form asp-action="Create" asp-controller="PlaceCategory" method="post">

                <div class="form-group">
                    <label asp-for="PlaceCategoryName" class="control-label"></label>
                    <input asp-for="PlaceCategoryName" class="form-control" />
                    <span asp-validation-for="PlaceCategoryName" class="text-danger"></span>
                </div>

            </form>





        </div>
        <div class="modal-footer">

            <button type="submit" class="btn btn-success" onclick="DoCreate()">Create New Module</button>

        </div>
    </div>
</div>


<script>
    function DoCreate() {
        var Cat = $("#PlaceCategoryName").val();
        $.ajax({
            type: "POST",
            url: "/PlaceCategory/Create",
            data: '{Name: "' + Cat + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (response) {
                window.location.reload();
            }
        });
    }
</script>
     
