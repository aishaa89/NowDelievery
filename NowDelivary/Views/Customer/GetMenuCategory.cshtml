@{
    ViewData["Title"] = "GetMenuCategory";
}

@using (Html.BeginForm("GetMenu", "Customer", FormMethod.Get))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="explore-search-form">
                    <div class="form-group">
                        <label style="color:white;font-size:large">Choose Supermarket section</label>
                        <div class="col-md-10">
                            @Html.DropDownList("menuCategotyID", ViewData["menuCat"] as IEnumerable<SelectListItem>, new { @class = "custom-select form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-outline-warning btn-block" value="Go" />
        </div>
    </div>
}

